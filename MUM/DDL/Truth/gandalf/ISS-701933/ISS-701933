ALTER TABLE `devices` ADD CONSTRAINT `fk_devices_instance_copy` FOREIGN KEY (`instance`) REFERENCES `instances` (`name`) ON DELETE CASCADE ON UPDATE CASCADE;

CREATE TABLE `instance_tuning_config` ( `id` int NOT NULL AUTO_INCREMENT, `instance` varchar(255) NOT NULL, `data_type` varchar(50) NOT NULL, `initial_days` int NOT NULL, `period_days` int NOT NULL, `horizon_days` int NOT NULL, PRIMARY KEY (`id`) ) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;
